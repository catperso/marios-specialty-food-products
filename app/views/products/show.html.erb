<h1><%= @product.name %></h1>
<h3><%= @product.country_of_origin %></h3>
<h2><%= @product.cost %></h2>

<% if @product.reviews.any? %>
  <h4>Here is what some people are saying about <%= @product.name %>:</h4>

  <% @product.reviews.each do |review| %>
    <ul>
      <li>
        <%= link_to review.author, product_review_path(@product, review) %>'s review
      </li>
    </ul>
  <% end %>
<% else %>
  <p>No reviews are listed for this product.
<% end %>

<button class="btn btn-success"><%= link_to "Add a review", new_product_review_path(@product) %></button>

<button class="btn btn-warning"><%= link_to "Edit product", edit_product_path(@product) %></button>
<button class="btn btn-danger"><%= link_to "Delete product", product_path(@product),
                                                              :data => {:confirm => "Are you sure?",
                                                                        :method => "delete"} %> </button>


<button class="btn btn-primary"><%= link_to "Return to all products", products_path %></button>