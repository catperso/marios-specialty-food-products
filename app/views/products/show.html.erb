<h1><%= @product.name %></h1>
<h3><%= @product.country_of_origin %></h3>
<h2><%= @product.cost %></h2>

<button class="btn btn-warning"><%= link_to "Edit product", edit_product_path(@product) %></button>
<button class="btn btn-danger"><%= link_to "Delete product", product_path(@product),
                                                              :data => {:confirm => "Are you sure?",
                                                                        :method => "delete"} %> </button>


<button class="btn btn-primary"><%= link_to "Return to all products", products_path %></button>