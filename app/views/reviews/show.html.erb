<h1><%= @review.author %>'s review of <%= @product.name %>:</h1>
<h3>Rating: <%= @review.rating %> out of 5</h3>
<p><%= @review.content_body %></p>

<button class="btn btn-warning"><%= link_to "Edit review", edit_product_review_path(@product, @review) %></button>
<button class="btn btn-danger"><%= link_to "Delete this review", product_review_path(@product, @review),
                                                                :data => {:confirm => "Are you sure?",
                                                                          :method => "delete"} %></button>

<button class="btn btn-primary"><%= link_to "Return to the product", product_path(@product) %></button>